# Absolute path to local copy of .tgz file containing mlnx_ofed package.
# The package can be downloaded from https://network.nvidia.com/products/infiniband-drivers/linux/mlnx_ofed/
# Optional variable.
mlnx_ofed_offline_path: "{{ mlnx_ofed_offline_path }}" # Value auto populated by Omnia 1.5-1.6 upgrade script

# If mlnx_ofed_offline_path is not given, declaring this variable is mandatory.
# The mlnx_ofed package is downloaded as per version mentioned in this variable.
# Default value: 5.4-2.4.1.3
mlnx_ofed_version: "{{ mlnx_ofed_version }}" # Value auto populated by Omnia 1.5-1.6 upgrade script

# Set this variable to true if kernel version currently available on compute nodes is 
# not compatible with mlnx_ofed version in use. 
# Mandatory variable
# Default value: true
mlnx_ofed_add_kernel_support: {{ mlnx_ofed_add_kernel_support | lower | regex_replace('["\']', '') }} # Value auto populated by Omnia 1.5-1.6 upgrade script

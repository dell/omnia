{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Proxy Configuration",
    "type": "object",
    "properties": {
        "proxy": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "http_proxy": {
                        "type": "string",
                        "format": "uri"
                    },
                    "https_proxy": {
                        "type": "string",
                        "format": "uri"
                    },
                    "no_proxy": {
                        "type": "string"
                    }
                },
                "required": [
                    "http_proxy",
                    "https_proxy",
                    "no_proxy"
                ]
            }
        }
    },
    "required": [
        "proxy"
    ]
}
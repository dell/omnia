{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Configuration Schema",
    "type": "object",
    "properties": {
      "nfs_client_params": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "server_ip": {
              "type": "string",
              "pattern": "^(localhost|(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)(?:\\.(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)){3})$"
            },
            "server_share_path": {
              "type": "string"
            },
            "client_share_path": {
              "type": "string"
            },
            "client_mount_options": {
              "type": "string"
            },
            "nfs_server": {
              "type": "boolean"
            },
            "slurm_share": {
              "type": "boolean"
            },
            "k8s_share": {
              "type": "boolean"
            }
          },
          "required": [
            "server_ip",
            "server_share_path",
            "client_share_path",
            "client_mount_options",
            "nfs_server"
          ]
        },
        "minItems": 1
      },
      "beegfs_rdma_support": {
        "type": "boolean",
        "default": false
      },
      "beegfs_ofed_kernel_modules_path": {
        "type": "string",
        "default": "/usr/src/ofa_kernel/default/include"
      },
      "beegfs_mgmt_server": {
        "type": "string",
        "format": "ipv4"
      },
      "beegfs_mounts": {
        "type": "string",
        "default": "/mnt/beegfs"
      },
      "beegfs_unmount_client": {
        "type": "boolean",
        "default": false
      },
      "beegfs_version_change": {
        "type": "boolean",
        "default": false
      },
      "beegfs_secret_storage_filepath": {
        "type": "string",
        "minLength": 1
      }
    },
    "required": [
      "nfs_client_params",
      "beegfs_mgmt_server",
      "beegfs_secret_storage_filepath"
    ]
  }
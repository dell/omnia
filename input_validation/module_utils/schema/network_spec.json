{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Networks": {
      "type": "array",
      "items": {
        "type": "object",
        "patternProperties": {
          "^[a-zA-Z0-9_-]+$": {
            "type": "object",
            "properties": {
              "nic_name": {
                "type": "string"
              },
              "netmask_bits": {
                "type": "string",
                "pattern": "^(1[0-9]|2[0-9]|[1-9])$|^3[0-2]$"
              },
              "static_range": {
                "type": "string",
                "pattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)-(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$|^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)/[0-9]{1,2}$"
              },
              "dynamic_range": {
                "type": "string",
                "pattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)-(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$|^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)/[0-9]{1,2}$"
              },
              "correlation_to_admin": {
                "type": "boolean"
              },
              "admin_uncorrelated_node_start_ip": {
                "type": "string",
                "format": "ipv4"
              },
              "reassignment_to_static": {
                "type": "boolean"
              },
              "discover_ranges": {
                "type": "string",
                "pattern": "^(|((\\d{1,3}\\.){3}\\d{1,3})(-(\\d{1,3}\\.){3}\\d{1,3})?)$"
              },
              "network_gateway": {
                "type": "string",
                "format": "ipv4"
              },
              "DNS": {
                "type": "string",
                "format": "ipv4"
              },
              "MTU": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}